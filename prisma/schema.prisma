// This is your database schema - it defines how data is stored

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// A Lead = a quote request from an organizer
model Lead {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Event information
  eventName         String
  eventDate         DateTime
  city              String
  postcode          String
  lat               Float?   // Latitude (for distance calculation)
  lng               Float?   // Longitude (for distance calculation)
  participants      Int?
  discipline        String?  // Trail, Triathlon, etc.
  notes             String?

  // Organizer contact
  organizerName     String
  organizerEmail    String
  organizerPhone    String?

  // Status of this lead
  status            String   @default("NOUVEAU")
  // Possible values: NOUVEAU, TIMERS_CONTACTES, EN_ATTENTE, DEVIS_ENVOYE, GAGNE, PERDU, PAS_DISPONIBLE

  // Relations - which timers are assigned to this lead
  assignments       Assignment[]
}

// A Timer = a chronometreur (partner)
model Timer {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())

  // Contact info
  name            String
  companyName     String?
  email           String   @unique
  phone           String?

  // Location
  postcode        String
  lat             Float?
  lng             Float?

  // Secret token for accessing their portal (no password needed)
  accessToken     String   @unique @default(uuid())

  // Is this timer active?
  isActive        Boolean  @default(true)

  // Relations - which leads are assigned to this timer
  assignments     Assignment[]
}

// An Assignment = link between a Lead and a Timer
model Assignment {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())

  // Links
  leadId          String
  lead            Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  timerId         String
  timer           Timer    @relation(fields: [timerId], references: [id], onDelete: Cascade)

  // Status specific to this timer
  status          String   @default("A_CONTACTER")
  // Possible values: A_CONTACTER, EN_ATTENTE, DEVIS_ENVOYE, GAGNE, PERDU, PAS_DISPONIBLE

  // Tracking
  distanceKm      Float?
  emailSentAt     DateTime?
  respondedAt     DateTime?

  // Ensure one assignment per lead-timer pair
  @@unique([leadId, timerId])
}
